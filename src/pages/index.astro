---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Frontend Mentor'>
  <main class='min-h-screen min-w-[320px] bg-slate-700 px-4 py-10 text-white'>
    <div class='mx-auto max-w-5xl'>
      <header class='mb-14 flex flex-col items-center gap-3 sm:gap-6'>
        <h1 class='text-center text-2xl font-bold sm:text-4xl'>Frontend Mentor Challanges</h1>

        <a
          href='https://github.com/Skeabrate'
          target='_blank'
          class='group flex gap-3 underline'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='28'
            height='28'
            viewBox='0 0 24 24'
            class='fill-white transition-colors group-hover:fill-orange-500'
          >
            <path
              d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z'
            ></path></svg
          >

          https://github.com/Skeabrate
        </a>
      </header>

      <div class='mx-auto max-w-xl'>
        <h2 class='mb-8 text-xl font-semibold'>Completed challanges:</h2>

        <div
          id='projects-container'
          class='grid gap-16'
        >
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { PROJECTS } from '../Projects';

  const projectsContainer = document.getElementById('projects-container');

  (function () {
    PROJECTS.forEach(({ title, frontEndMentorUrl, projectUrl, img }, idx) => {
      const newProject = document.createElement('section');
      newProject.innerHTML = `
				<h3 class='mb-4 grid grid-cols-[56px_auto] items-center gap-3 sm:gap-5'>
					<span
						class='flex h-14 w-14 items-center justify-center rounded-full bg-red-500 text-3xl font-bold'
						>${idx + 1}</span
					>
					<div class='flex flex-col items-start'>
						${title}
						<a
							href='${frontEndMentorUrl}'
							target='_blank'
							class='break-all text-xs text-red-200 italic underline'
							>${frontEndMentorUrl}</a
						>
					</div>
				</h3>

				<a
					href='${projectUrl}'
					class='group relative flex overflow-hidden p-2'
				>
					<p class='absolute bottom-0 left-0 h-20 w-20 border-l-2 border-b-2'></p>
					<img
						src='index/${img}'
						alt='${title}'
						class='h-full w-full transition-transform duration-300 group-hover:scale-110'
					/>
					<p class='absolute top-0 right-0 h-20 w-20 border-r-2 border-t-2'></p>
				</a>
			`;

      projectsContainer?.appendChild(newProject);
    });
  })();
</script>

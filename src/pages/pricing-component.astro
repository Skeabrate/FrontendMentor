---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Pricing Component'>
  <main class='relative min-h-screen bg-indigo-100 text-center'>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='375'
      height='658'
      class='absolute top-0 right-0'
      ><g
        fill='none'
        fill-rule='evenodd'
        stroke='#D0D5F6'
        stroke-width='2'
        ><path
          d='M172.71-101C70.623-79.38 17.478-39.688 13.273 18.074c-6.307 86.643 231.598 17.186 136.358 198-95.241 180.813-181.318 185.29-136.358 298C58.233 626.784 178.96 685.954 319.21 641.2c93.501-29.836 144.652-140.545 153.453-332.126'
        ></path><path
          d='M214.7-101C134.617-82.012 92.926-47.154 89.628 3.575c-4.948 76.093 181.679 15.094 106.966 173.89C121.882 336.262 54.36 340.192 89.628 439.18c35.269 98.986 129.974 150.95 239.995 111.646C402.97 524.622 443.096 427.395 450 259.141'
        ></path><path
          d='M250.935-103c-60.604 16.56-92.153 46.963-94.65 91.208-3.743 66.367 137.488 13.165 80.949 151.664-56.54 138.5-107.638 141.927-80.948 228.261 26.69 86.335 98.359 131.656 181.618 97.376C393.41 442.655 423.775 357.855 429 211.108'
        ></path></g
      ></svg
    >

    <div class='relative z-10 flex min-h-screen flex-col items-center justify-center py-10 px-4'>
      <h1 class='mb-6 text-xl font-bold text-slate-500 md:text-2xl'>Our Pricing</h1>

      <div
        class='mb-10 flex items-center justify-center gap-6 font-semibold text-slate-400 md:mb-16'
      >
        Annually
        <label class='switch'>
          <input
            id='switch-input'
            checked
            type='checkbox'
          />
          <span class='slider round'></span>
        </label>
        Monthly
      </div>

      <section class='grid gap-6 md:grid-cols-3 md:gap-0'>
        <div class='w-64 rounded-lg rounded-r-none bg-indigo-50 p-6 text-slate-700 shadow-md'>
          <h2 class='text-xs font-bold md:text-sm'>Basic</h2>
          <h3
            id='basic'
            class='mt-4 mb-6 text-5xl font-bold'
          >
            $19.99
          </h3>

          <ul>
            <li class='border-y border-slate-300 py-3 text-xs font-semibold'>500 GB Storage</li>
            <li class='border-b border-slate-300 py-3 text-xs font-semibold'>2 Users Allowerd</li>
            <li class='border-b border-slate-300 py-3 text-xs font-semibold'>Send up to 3GB</li>
          </ul>
          <button
            class='mt-6 w-full rounded-sm bg-gradient-to-l from-indigo-400 to-indigo-300 py-2 text-xs font-semibold tracking-widest text-indigo-50 hover:from-indigo-50 hover:to-indigo-50 hover:text-indigo-400 hover:outline hover:outline-1 hover:outline-indigo-400'
            >LEARN MORE</button
          >
        </div>

        <div
          class='relative z-10 rounded-lg bg-gradient-to-t from-indigo-400 to-indigo-300 p-6 text-indigo-50 after:absolute after:top-0 after:left-0 after:-z-10 after:hidden after:h-full after:w-full after:origin-center after:scale-y-110 after:rounded-md after:bg-gradient-to-t after:from-indigo-400 after:to-indigo-300 after:shadow-md md:after:block'
        >
          <h2 class='text-xs font-bold md:text-sm'>Professional</h2>
          <h3
            id='professional'
            class='mt-4 mb-6 text-5xl font-bold'
          >
            $24.99
          </h3>

          <ul>
            <li class='border-y border-indigo-300 py-3 text-xs font-semibold'>1 TB Storage</li>
            <li class='border-b border-indigo-300 py-3 text-xs font-semibold'>5 Users Allowerd</li>
            <li class='border-b border-indigo-300 py-3 text-xs font-semibold'>Send up to 10GB</li>
          </ul>
          <button
            class='mt-6 w-full rounded-sm bg-white py-2 text-xs font-bold leading-4 tracking-widest text-indigo-400 hover:bg-transparent hover:text-indigo-50 hover:outline hover:outline-1 hover:outline-indigo-50'
            >LEARN MORE</button
          >
        </div>

        <div class='rounded-lg rounded-l-none bg-indigo-50 p-6 text-slate-700 shadow-md'>
          <h2 class='text-xs font-bold md:text-sm'>Master</h2>
          <h3
            id='master'
            class='mt-4 mb-6 text-5xl font-bold'
          >
            $39.99
          </h3>

          <ul>
            <li class='border-y border-slate-300 py-3 text-xs font-semibold'>2 TB Storage</li>
            <li class='border-b border-slate-300 py-3 text-xs font-semibold'>10 Users Allowerd</li>
            <li class='border-b border-slate-300 py-3 text-xs font-semibold'>Send up to 20GB</li>
          </ul>
          <button
            class='mt-6 w-full rounded-sm bg-gradient-to-l from-indigo-400 to-indigo-300 py-2 text-xs font-semibold tracking-widest text-indigo-50 hover:from-indigo-50 hover:to-indigo-50 hover:text-indigo-400 hover:outline hover:outline-1 hover:outline-indigo-400'
            >LEARN MORE</button
          >
        </div>
      </section>
    </div>

    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='353'
      height='304'
      class='absolute bottom-0 left-0 hidden sm:block'
      ><g
        fill='none'
        fill-rule='evenodd'
        stroke='#D0D5F6'
        stroke-width='2'
        ><path
          d='M180.29 759c102.087-21.62 155.232-61.312 159.437-119.074 6.307-86.643-231.598-17.186-136.358-198 95.241-180.813 181.318-185.29 136.358-298C294.767 31.216 174.04-27.954 33.79 16.8c-93.501 29.836-144.652 140.545-153.453 332.126'
        ></path><path
          d='M138.3 759c80.083-18.988 121.774-53.846 125.072-104.575 4.948-76.093-181.679-15.094-106.966-173.89C231.118 321.738 298.64 317.808 263.372 218.82c-35.269-98.986-129.974-150.95-239.995-111.646C-49.97 133.378-90.096 230.605-97 398.859'
        ></path><path
          d='M102.065 761c60.604-16.56 92.153-46.963 94.65-91.208 3.743-66.367-137.488-13.165-80.949-151.664 56.54-138.5 107.638-141.927 80.948-228.261-26.69-86.335-98.359-131.656-181.618-97.376C-40.41 215.345-70.775 300.145-76 446.892'
        ></path></g
      ></svg
    >
  </main>
</Layout>

<script>
  const switchInput = document.getElementById('switch-input');

  const pricing = [
    {
      type: 'basic',
      monthly: 19.99,
      annually: 199.99,
    },
    {
      type: 'professional',
      monthly: 24.99,
      annually: 249.99,
    },
    {
      type: 'master',
      monthly: 39.99,
      annually: 399.999,
    },
  ];

  switchInput?.addEventListener('input', (e) =>
    setNewPricings((e.target as HTMLInputElement).checked)
  );

  function setNewPricings(isInputChecked: boolean) {
    pricing.forEach(({ type, monthly, annually }) => {
      const label = document.getElementById(type);
      label!.innerText = `$${isInputChecked ? monthly : annually}`;
    });
  }
</script>

<style>
  .switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #c7d2fe;
    -webkit-transition: 0.4s;
    transition: 0.4s;
  }

  .slider:before {
    position: absolute;
    content: '';
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    -webkit-transition: 0.4s;
    transition: 0.4s;
  }

  input:checked + .slider {
    background-color: #818cf8;
  }

  input:focus + .slider {
    box-shadow: 0 0 1px #818cf8;
  }

  input:checked + .slider:before {
    -webkit-transform: translateX(26px);
    -ms-transform: translateX(26px);
    transform: translateX(26px);
  }

  .slider.round {
    border-radius: 34px;
  }

  .slider.round:before {
    border-radius: 50%;
  }
</style>

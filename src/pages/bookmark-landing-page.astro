---
import Layout from '../layouts/Layout.astro';
import BgDots from '../resources/bookmark-landing-page-master/images/BgDots.astro';
import Chrome from '../resources/bookmark-landing-page-master/images/Chrome.astro';
import Facebook from '../resources/bookmark-landing-page-master/images/Facebook.astro';
import Firefox from '../resources/bookmark-landing-page-master/images/Firefox.astro';
import Hamburger from '../resources/bookmark-landing-page-master/images/Hamburger.astro';
import ImgHero from '../resources/bookmark-landing-page-master/images/ImgHero.astro';
import ImgTab1 from '../resources/bookmark-landing-page-master/images/ImgTab1.astro';
import Logo from '../resources/bookmark-landing-page-master/images/Logo.astro';
import Opera from '../resources/bookmark-landing-page-master/images/Opera.astro';
import Twitter from '../resources/bookmark-landing-page-master/images/Twitter.astro';
---

<Layout title='Bookmark Landing Page'>
  <nav class='mx-auto flex max-w-6xl items-center justify-between px-4 py-4 sm:p-8'>
    <button>
      <Logo />
    </button>

    <ul class='hidden gap-8 text-sm sm:flex'>
      <li class='py-2'>FEATURES</li>
      <li class='py-2'>PRICING</li>
      <li class='py-2'>CONTACT</li>
      <li class='rounded-md bg-red-400 px-5 py-2 font-semibold text-white shadow-sm'>LOGIN</li>
    </ul>

    <button class='sm:hidden'>
      <Hamburger />
    </button>
  </nav>

  <main>
    <section class='mt-10 mb-28 flex max-w-full flex-col'>
      <div
        class='relative mb-8 after:absolute after:bottom-0 after:right-0 after:-z-10 after:h-3/4 after:w-3/4 after:rounded-l-[100px] after:bg-indigo-500'
      >
        <ImgHero />
      </div>
      <article class='px-4 text-center sm:text-left'>
        <h1 class='text-3xl font-bold sm:text-4xl'>A Simple Bookmark Manager</h1>
        <p class='pt-6 pb-8 text-zinc-400'>
          A clean and simple interface to organize your favourite websites. Open a new browser tab
          and see your sites load instantly. Try it for free.
        </p>
        <div class='flex justify-center gap-3 sm:justify-start sm:gap-4'>
          <button
            class='rounded bg-indigo-500 px-3 py-3 text-sm font-semibold text-white shadow-md sm:px-4'
            >Get it on Chrome</button
          >
          <button
            class='rounded bg-zinc-100 px-3 py-3 text-sm font-semibold text-zinc-700 shadow-md sm:px-4'
            >Get it on Firefox</button
          >
        </div>
      </article>
    </section>

    <section class='mb-28'>
      <article class='mb-14 px-4 text-center sm:mx-auto sm:max-w-lg'>
        <h2 class='mb-2 text-2xl font-semibold sm:mb-4 sm:text-3xl'>Features</h2>
        <p class='mb-10 text-zinc-400'>
          Our aim is to make it quick and easy for you to access your favourite websites. Your
          bookmarks sync between your devices so you can access them on the go.
        </p>
        <ul class='flex flex-col sm:flex-row'>
          <li>
            <button
              class='h-full w-full border-b border-t border-zinc-300 py-4 text-zinc-500 sm:border-t-0'
              >Simple Bookmarking</button
            >
          </li>
          <li>
            <button class='h-full w-full border-b border-zinc-300 py-4 text-zinc-500'
              >Speedy Searching</button
            >
          </li>
          <li>
            <button class='h-full w-full border-b border-zinc-300 py-4 text-zinc-500'
              >Easy Sharing</button
            >
          </li>
        </ul>
      </article>

      <article>
        <div
          class='relative mb-10 pb-10 after:absolute after:bottom-0 after:left-0 after:-z-10 after:h-3/4 after:w-3/4 after:rounded-r-[150px] after:bg-indigo-500'
        >
          <ImgTab1 />
        </div>
        <div class='px-4 text-center'>
          <h3 class='mb-2 text-2xl font-semibold sm:mb-4 sm:text-3xl'>Bookmark in one click</h3>
          <p class='text-zinc-400'>
            Organize your bookmarks however you like. Our simple drag-and-drop interface gives you
            complete control over how you manage your favourite sites.
          </p>
        </div>
      </article>
    </section>

    <section class='mb-28 px-4 text-center'>
      <h2 class='mb-2 text-2xl font-semibold sm:mb-4 sm:text-3xl'>Download the extension</h2>
      <p class='mb-8 text-zinc-400'>
        We’ve got more browsers in the pipeline. Please do let us know if you’ve got a favourite
        you’d like us to prioritize.
      </p>

      <div class='flex flex-col items-center gap-8'>
        <div
          class='flex max-w-[280px] flex-col items-center overflow-hidden rounded-xl pt-12 shadow-lg'
        >
          <Chrome />
          <h3 class='mt-6 text-xl font-semibold'>Add to Chrome</h3>
          <p class='mb-8 text-sm text-zinc-500'>Minimum version 62</p>
          <BgDots />
          <div class='w-full px-4 py-6'>
            <button
              class='w-full rounded bg-indigo-500 py-3 text-sm font-semibold text-white shadow-md'
              >Add & Install Extension</button
            >
          </div>
        </div>

        <div
          class='flex max-w-[280px] flex-col items-center overflow-hidden rounded-xl pt-12 shadow-lg'
        >
          <Firefox />
          <h3 class='mt-6 text-xl font-semibold'>Add to Firefox</h3>
          <p class='mb-8 text-sm text-zinc-500'>Minimum version 55</p>
          <BgDots />
          <div class='w-full px-4 py-6'>
            <button
              class='w-full rounded bg-indigo-500 py-3 text-sm font-semibold text-white shadow-md'
              >Add & Install Extension</button
            >
          </div>
        </div>

        <div
          class='flex max-w-[280px] flex-col items-center overflow-hidden rounded-xl pt-12 shadow-lg'
        >
          <Opera />
          <h3 class='mt-6 text-xl font-semibold'>Add to Opera</h3>
          <p class='mb-8 text-sm text-zinc-500'>Minimum version 46</p>
          <BgDots />
          <div class='w-full px-4 py-6'>
            <button
              class='w-full rounded bg-indigo-500 py-3 text-sm font-semibold text-white shadow-md'
              >Add & Install Extension</button
            >
          </div>
        </div>
      </div>
    </section>

    <section class='mb-28 flex flex-col px-4'>
      <div class='text-center'>
        <h2 class='mb-2 text-2xl font-semibold sm:mb-4 sm:text-3xl'>Frequently Asked Question</h2>
        <p class='mb-12 text-zinc-400'>
          Here are some of our FAQs. If you have any other questions you’d like answered please feel
          free to email us.
        </p>
      </div>

      <div class='mb-10'>
        <button
          class='accordion flex w-full justify-between py-4 text-left font-semibold text-zinc-700'
          >What is Bookmark?</button
        >
        <div
          class='panel max-h-0 overflow-hidden border-b border-zinc-300 transition-all duration-300'
        >
          <p class='pb-4 text-sm text-zinc-400'>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce tincidunt justo eget
            ultricies fringilla. Phasellus blandit ipsum quis quam ornare mattis.
          </p>
        </div>

        <button
          class='accordion flex w-full justify-between py-4 text-left font-semibold text-zinc-700'
          >How can I request a new browser?</button
        >
        <div
          class='panel max-h-0 overflow-hidden border-b border-zinc-300 transition-all duration-300'
        >
          <p class='pb-4 text-sm text-zinc-400'>
            Vivamus luctus eros aliquet convallis ultricies. Mauris augue massa, ultricies non
            ligula. Suspendisse imperdiet. Vivamus luctus eros aliquet convallis ultricies. Mauris
            augue massa, ultricies non ligula. Suspendisse imperdie tVivamus luctus eros aliquet
            convallis ultricies. Mauris augue massa, ultricies non ligula. Suspendisse imperdiet.
          </p>
        </div>

        <button
          class='accordion flex w-full justify-between py-4 text-left font-semibold text-zinc-700'
          >Is there a mobile app?</button
        >
        <div
          class='panel max-h-0 overflow-hidden border-b border-zinc-300 transition-all duration-300'
        >
          <p class='pb-4 text-sm text-zinc-400'>
            Sed consectetur quam id neque fermentum accumsan. Praesent luctus vestibulum dolor, ut
            condimentum urna vulputate eget. Cras in ligula quis est pharetra mattis sit amet
            pharetra purus. Sed sollicitudin ex et ultricies bibendum.
          </p>
        </div>

        <button
          class='accordion flex w-full justify-between py-4 text-left font-semibold text-zinc-700'
          >What about other Chromium browsers?</button
        >
        <div
          class='panel max-h-0 overflow-hidden border-b border-zinc-300 transition-all duration-300'
        >
          <p class='pb-4 text-sm text-zinc-400'>
            Integer condimentum ipsum id imperdiet finibus. Vivamus in placerat mi, at euismod dui.
            Aliquam vitae neque eget nisl gravida pellentesque non ut velit.
          </p>
        </div>
      </div>

      <button
        class='mx-auto rounded bg-indigo-500 py-3 px-5 text-sm font-semibold text-white shadow-md'
        >More Info</button
      >
    </section>
  </main>

  <footer class='bg-indigo-500 text-white'>
    <div class='flex flex-col items-center px-4 py-16 text-center'>
      <p class='mb-2 text-sm uppercase tracking-widest sm:mb-4'>35,000+ already joined</p>
      <h2 class='mb-6 text-2xl font-semibold sm:mb-8'>
        Stay up-to-date with what <br /> we're doing
      </h2>

      <div class='flex w-full flex-col gap-4 sm:w-96 sm:flex-row sm:gap-3'>
        <input
          class='h-12 w-full rounded px-4 text-black placeholder-zinc-300'
          type='text'
          placeholder='Enter your email address'
        />
        <button class='h-12 w-full rounded bg-red-400 text-sm font-semibold sm:w-48'
          >Contact Us</button
        >
      </div>
    </div>

    <div class='bg-slate-800 px-4 py-8 sm:p-8'>
      <div class='mx-auto flex max-w-6xl flex-col items-center justify-between gap-8 sm:flex-row'>
        <ul class='flex flex-col items-center gap-6 text-sm sm:flex-row sm:gap-8'>
          <li><Logo isWhite /></li>
          <li>FEATURES</li>
          <li>PRICING</li>
          <li>CONTACT</li>
        </ul>

        <ul class='flex items-center gap-8'>
          <li><Facebook /></li>
          <li><Twitter /></li>
        </ul>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .accordion:after {
    content: '\02795';
    font-size: 13px;
    margin-left: 5px;
  }

  /* .active {
    background-color: #ccc;
  } */

  .active:after {
    content: '\2796';
  }
</style>

<script>
  const accordion: HTMLCollection = document.getElementsByClassName('accordion');

  [...accordion].forEach((question) => {
    question.addEventListener('click', () => {
      question.classList.toggle('active');
      let panel = question.nextElementSibling as HTMLElement;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = '';
      } else {
        panel.style.maxHeight = panel.scrollHeight + 'px';
      }
    });
  });
</script>

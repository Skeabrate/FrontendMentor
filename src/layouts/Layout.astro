---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <nav class='fixed'>
      <button
        id='hambuerger'
        class='m-4 flex h-12 w-14 flex-col justify-between bg-white p-3'
      >
        <span class='block h-1 w-full bg-black'></span>
        <span class='block h-1 w-full bg-black'></span>
        <span class='block h-1 w-full bg-black'></span>
      </button>

      <ul
        id='slide-menu'
        class='absolute top-full flex w-screen -translate-x-full flex-col gap-1 bg-slate-200 p-4 transition-transform duration-300 sm:w-72'
      >
        <li>
          <a
            href='/'
            class='font-bold'
            >First project</a
          >
        </li>
        <li>
          <a
            href='/'
            class='font-bold'
            >Second project</a
          >
        </li>
        <li>
          <a
            href='/'
            class='font-bold'
            >Third project</a
          >
        </li>
      </ul>
    </nav>

    <slot />
  </body>
</html>

<script>
  const button = document.getElementById('hambuerger');
  const slideMenu = document.getElementById('slide-menu');

  button?.addEventListener('click', () => {
    slideMenu?.classList.toggle('isMenuActive');
  });
</script>

<style>
  .isMenuActive {
    transform: translateX(0);
  }
</style>
